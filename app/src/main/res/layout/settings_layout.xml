<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="147dp"
        android:layout_marginTop="28dp"
        android:text="@string/settings_caption"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/swLang"
        android:layout_width="271dp"
        android:layout_height="0dp"
        android:layout_marginEnd="54dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="22dp"
        android:text="@string/settings_dutch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/swNot" />

    <Switch
        android:id="@+id/swNot"
        android:layout_width="271dp"
        android:layout_height="0dp"
        android:layout_marginEnd="54dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="22dp"
        android:text="@string/settings_notification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/swThm" />

    <Switch
        android:id="@+id/swThm"
        android:layout_width="271dp"
        android:layout_height="0dp"
        android:layout_marginEnd="54dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="58dp"
        android:text="@string/settings_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

</android.support.constraint.ConstraintLayout>