<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCDCDC"
    tools:layout_editor_absoluteY="81dp">

    <EditText
        android:id="@+id/textNameProfile"
        android:layout_width="308dp"
        android:layout_height="0dp"
        android:layout_marginStart="238dp"
        android:layout_marginTop="90dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Level"
        android:layout_width="309dp"
        android:layout_height="0dp"
        android:layout_marginStart="238dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Level"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Sports" />

    <EditText
        android:id="@+id/Sports"
        android:layout_width="308dp"
        android:layout_height="0dp"
        android:layout_marginStart="238dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Sports"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textNameProfile" />

    <ImageButton
        android:id="@+id/profileImg"
        android:layout_width="101dp"
        android:layout_height="89dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="117dp"
        app:layout_constraintEnd_toStartOf="@+id/Sports"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/com_facebook_profile_picture_blank_square" />

    <Button
        android:id="@+id/btnAccept"
        style="@style/FirebaseUI.Button.AccountChooser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="Accept"
        app:layout_constraintEnd_toStartOf="@+id/btnDeny"
        app:layout_constraintTop_toBottomOf="@+id/Level" />

    <Button
        android:id="@+id/btnDeny"
        style="@style/FirebaseUI.Button.AccountChooser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:text="Deny"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Level" />

</android.support.constraint.ConstraintLayout>