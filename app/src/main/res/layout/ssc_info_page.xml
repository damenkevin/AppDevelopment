    <TextView
        android:id="@+id/tueOutText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toBottomOf="@+id/tueText"
        app:layout_constraintStart_toStartOf="@+id/locationSpinner"
        app:layout_constraintTop_toTopOf="@+id/tueText"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/wedOutText"
        android:layout_width="183dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toBottomOf="@+id/wedText"
        app:layout_constraintStart_toStartOf="@+id/locationSpinner"
        app:layout_constraintTop_toTopOf="@+id/wedText"
        app:layout_constraintVertical_bias="0.2" />

    <TextView
        android:id="@+id/thuOutText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
